[Desktop Entry]
# XDG Desktop Entry Specification v1.5
# https://specifications.freedesktop.org/desktop-entry-spec/latest/

# Basic Information
Name=ZaDark
GenericName=Instant Messenger
Comment=Zalo Messenger with Dark Theme - Unofficial Community Port
Keywords=chat;messenger;im;zalo;zadark;message;dark;theme;

# Executable and Icon
Exec=bash %h/.local/share/Zalo/start.sh
Icon=%h/.local/share/Zalo/assets/Zalo.png
TryExec=%h/.local/share/Zalo/start.sh

# Application Type
Type=Application
Terminal=false

# Categories (XDG Menu Specification)
Categories=Network;InstantMessaging;Chat;

# MIME Types
MimeType=x-scheme-handler/zalo;

# Startup Notification
StartupNotify=true
StartupWMClass=Zalo

# KDE Plasma Specific
X-KDE-StartupNotify=true
X-KDE-SubstituteUID=false
X-KDE-Username=

# Additional Metadata
Version=1.0
